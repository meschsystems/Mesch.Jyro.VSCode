{
  "scopeName": "source.jyro",
  "patterns": [
    { "include": "#comments" },
    { "include": "#dataKeyword" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "match": "#.*$", "name": "comment.line.number-sign.jyro" }
      ]
    },
    "dataKeyword": {
      "patterns": [
        { "match": "\\bData\\b", "name": "variable.language.data.jyro" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(var|if|then|else|end|switch|do|case|default|while|foreach|in|return|break|continue)\\b",
          "name": "keyword.control.jyro"
        },
        {
          "match": "\\b(and|or|not|is)\\b",
          "name": "keyword.operator.logical.jyro"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "match": "\\b(number|string|boolean|object|array)\\b",
          "name": "storage.type.jyro"
        }
      ]
    },
    "constants": {
      "patterns": [
        { "match": "\\b(true|false|null)\\b", "name": "constant.language.jyro" }
      ]
    },
    "numbers": {
      "patterns": [
        { "match": "\\b\\d+(\\.\\d+)?\\b", "name": "constant.numeric.jyro" }
      ]
    },
    "strings": {
      "patterns": [
        { "match": "\"([^\"\\\\]|\\\\.)*\"", "name": "string.quoted.double.jyro" }
      ]
    },
    "functions": {
      "patterns": [
        { "match": "\\b[A-Z][A-Za-z0-9_]*\\b", "name": "support.function.jyro" }
      ]
    }
  }
}
